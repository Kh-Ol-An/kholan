{
	"compilerOptions": {
		"target": "ES2020",
		"moduleResolution": "Node",
		"module": "ESNext",
		"isolatedModules": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"],
	"files": [],
	"references": [
		{ "path": "packages/shared" },
		{ "path": "packages/types" },
		{ "path": "apps/web" },
		{ "path": "apps/api" }
	]
}
